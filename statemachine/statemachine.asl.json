{
    "Comment": "State machine description",
    "StartAt": "Lambda Invoke",
    "States": {
        "Lambda Invoke": {
          "Type": "Map",
          "ItemsPath": "$.books",
          "MaxConcurrency": 0,
          "ItemSelector": {
            "book.$": "$$.Map.Item.Value",
            "days_forward.$": "$.days_forward"
          },
          "ItemProcessor": {
            "StartAt": "Validate",
            "States": {
              "Validate": {
                "Type": "Task",
                "Resource": "arn:aws:states:::lambda:invoke",
                "Parameters": {
                    "Payload.$": "$",
                    "FunctionName": "${ProcessingLambda}"
                },
                "End": true
              }
            }
          },
          "End": true
        }
    }
}